<Window x:Class="TaskManagerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление задачами" Height="450" Width="700"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель управления задачами -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="Название" Margin="0,0,0,2"/>
                <TextBox x:Name="TaskNameTextBox" Width="150" Margin="0,0,10,0"/>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="Приоритет" Margin="0,0,0,2"/>
                <ComboBox x:Name="PriorityComboBox" Width="100" Margin="0,0,10,0">
                    <ComboBoxItem Content="Низкий"/>
                    <ComboBoxItem Content="Средний"/>
                    <ComboBoxItem Content="Высокий"/>
                </ComboBox>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="Срок" Margin="0,0,0,2"/>
                <DatePicker x:Name="DueDatePicker" Width="130" Margin="0,0,10,0"/>
            </StackPanel>

            <StackPanel VerticalAlignment="Bottom">
                <CheckBox x:Name="IsDoneCheckBox" Content="Выполнено" Margin="0,0,10,0"/>
            </StackPanel>

            <StackPanel VerticalAlignment="Bottom">
                <Button Content="Добавить" Width="80" Click="AddTask_Click"/>
                <Button Content="Изменить" Width="80" Margin="5,5,0,0" Click="EditTask_Click"/>
                <Button Content="Удалить" Width="80" Margin="5,5,0,0" Click="DeleteTask_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- Список задач -->
        <ListBox x:Name="TaskListBox" Grid.Row="1"/>
    </Grid>
</Window>