<Window x:Class="Module_9._2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление проектами" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <TabControl Margin="10">
            <!-- Проекты -->
            <TabItem Header="Проекты">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBox x:Name="ProjectNameTextBox" Width="200" Margin="0,0,10,0" />
                        <Button Content="Добавить" Width="100" Click="AddProject_Click"/>
                        <Button Content="Удалить" Width="100" Margin="10,0,0,0" Click="DeleteProject_Click"/>
                    </StackPanel>
                    <ListBox x:Name="ProjectListBox" Grid.Row="1"/>
                </Grid>
            </TabItem>

            <!-- Задачи -->
            <TabItem Header="Задачи">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBox x:Name="TaskNameTextBox" Width="200" Margin="0,0,10,0" />
                            <ComboBox x:Name="PriorityComboBox" Width="100" Margin="0,0,10,0">
                                <ComboBoxItem Content="Низкий"/>
                                <ComboBoxItem Content="Средний"/>
                                <ComboBoxItem Content="Высокий"/>
                            </ComboBox>
                            <DatePicker x:Name="DueDatePicker" Width="150"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <ComboBox x:Name="EmployeeComboBox" Width="200" Margin="0,0,10,0"/>
                            <ComboBox x:Name="ProjectComboBox" Width="200" Margin="0,0,10,0"/>
                            <Button Content="Добавить" Width="100" Click="AssignTask_Click"/>
                            <Button Content="Удалить" Width="100" Margin="10,0,0,0" Click="DeleteTask_Click"/>
                        </StackPanel>
                    </StackPanel>
                    <ListBox x:Name="TaskListBox" Grid.Row="1"/>
                </Grid>
            </TabItem>

            <!-- Сотрудники -->
            <TabItem Header="Сотрудники">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBox x:Name="EmployeeNameTextBox" Width="200" Margin="0,0,10,0" />
                        <Button Content="Добавить" Width="100" Click="AddEmployee_Click"/>
                        <Button Content="Удалить" Width="100" Margin="10,0,0,0" Click="DeleteEmployee_Click"/>
                    </StackPanel>
                    <ListBox x:Name="EmployeeListBox" Grid.Row="1"/>
                </Grid>
            </TabItem>

            <!-- Отчёты -->
            <TabItem Header="Отчёты">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Button Content="Сформировать отчёт"
                            Width="200" Height="40"
                            HorizontalAlignment="Left"
                            Margin="0,0,0,10"
                            Click="GenerateReport_Click"
                            Grid.Row="0"/>

                    <TextBox x:Name="ReportTextBox"
                             Grid.Row="1"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
